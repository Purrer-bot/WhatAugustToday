<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/bg_am_autumn"


>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.3">
    </FrameLayout>
    <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/am_bt_notify"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_bell"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="СЕГОДНЯ АВГУСТА"
            android:textColor="@android:color/background_light"
            android:id="@+id/am_tv_august"
            android:textSize="40sp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90sp"
            android:textStyle="bold"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"

    />
    <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="время надевать бикини и парео"
            android:layout_below="@id/am_tv_august"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_alignRight="@id/am_tv_august"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
    />

</RelativeLayout>